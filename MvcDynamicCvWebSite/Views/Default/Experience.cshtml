@using MvcDynamicCvWebSite.Models.Entity
@model List<Experience>

<div class="resume-section-content">
    @foreach (var item in Model)
    {
         <h2 class="mb-5">Deneyimlerim </h2> 
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">
                <h3 class="mb-0">@item.Heading</h3>
                <div class="subheading mb-3">@item.SubHeading</div>
                <p>@item.Description</p>
            </div>
            <div class="flex-shrink-0"><span class="text-primary">@item.Date</span></div>
        </div>
     }
</div>